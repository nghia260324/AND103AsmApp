<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AddressesActivity"
    android:padding="24dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_alignParentStart="true"
            android:id="@+id/btn_back"
            android:layout_gravity="left"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/baseline_arrow_back"/>
        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Addresses"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:fontFamily="@font/mulishbold"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="24dp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/mulishbold"/>
    <TextView
        android:layout_marginTop="6dp"
        android:paddingHorizontal="12dp"
        android:id="@+id/tv_address"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name | Phone\nAddress"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/mulishbold"/>
    <Spinner
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_province"/>
    <Spinner
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_district"/>
    <Spinner
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_ward"/>
    <EditText
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Address"
        android:id="@+id/edt_myAddress"
        android:fontFamily="@font/mulishmedium"
        android:textSize="16sp"/>
    <EditText
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Phone"
        android:id="@+id/edt_myPhone"
        android:fontFamily="@font/mulishmedium"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/mulishbold"
        android:background="@drawable/cus_bgr_green_circle_28"/>
</LinearLayout>