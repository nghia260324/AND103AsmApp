<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Activity.SplashScreenActivity">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="center"
        android:src="@drawable/imgsplashscreen"/>
    <TextView
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grocery Shop"
        android:textColor="@color/green_200"
        android:textSize="36sp"
        android:fontFamily="@font/museomodernoblack"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="at your door"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/museomodernobold"/>
    <TextView
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="The easiest way to buy your grocery shopping"
        android:textColor="@color/black_220"
        android:textSize="16sp"
        android:fontFamily="@font/museomodernoregular"/>
</LinearLayout>