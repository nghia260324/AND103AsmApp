<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/cus_bgr_white_shadow">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_alignParentStart="true"
            android:id="@+id/btn_back"
            android:layout_gravity="left"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/baseline_arrow_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Category"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:fontFamily="@font/mulishbold"/>
    </RelativeLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:padding="6dp"
        android:background="@drawable/cus_bgr_stroke_green_circle">
        <EditText
            android:id="@+id/edt_name"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColor="@color/black"
            android:fontFamily="@font/mulishmedium"
            android:textSize="16sp"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_addCategoryDialog"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Add Category"
        android:textColor="@color/white"
        android:fontFamily="@font/mulishbold"
        android:textSize="16sp"
        android:background="@drawable/cus_bgr_green_circle_28"/>
</LinearLayout>