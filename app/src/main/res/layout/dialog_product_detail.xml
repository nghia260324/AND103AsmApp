<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="-250dp"
        android:layout_width="700dp"
        android:layout_height="500dp"
        android:minWidth="500dp"
        android:src="@drawable/cus_bgr_green_circle_250"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|top"
        android:padding="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/baseline_arrow_back"/>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="12dp"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:src="@drawable/apples_red"
            android:scaleType="fitCenter"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple"
                android:textSize="32sp"
                android:fontFamily="@font/mulishblack"
                android:textColor="@color/black"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>
            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cus_bgr_green_circle_28">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/baseline_remove"
                    android:backgroundTint="@color/white"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1Kg"
                android:layout_marginHorizontal="6dp"
                android:textSize="18sp"
                android:fontFamily="@font/mulishmedium"
                android:textColor="@color/green_200"/>
            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cus_bgr_green_circle_28">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/baseline_add"
                    android:backgroundTint="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: 10$"
            android:textSize="18sp"
            android:fontFamily="@font/mulishmedium"
            android:textColor="@color/green_200"/>
        <TextView
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descriptions:"
            android:textSize="18sp"
            android:fontFamily="@font/mulishbold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apple Mountain works as a seller for many apple growers of apple. apple are easy to spot in your produce aisle. They are just like regular apple, but they will usually have a few more scars on."
            android:textSize="18sp"
            android:fontFamily="@font/mulishlight"
            android:textColor="@color/black"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_shopping_cart"
            android:text="Add to Cart"
            android:fontFamily="@font/mulishbold"
            android:textColor="@color/green_200"
            android:background="@drawable/cus_bgr_white_shadow"
            android:padding="12dp"
            android:layout_marginTop="32dp"
            android:drawablePadding="6dp"
            android:drawableTint="@color/green_200"/>
    </LinearLayout>
</RelativeLayout>