<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="18sp"
                android:textColor="@color/black_220"
                android:fontFamily="@font/museomodernobold"/>
            <TextView
                android:layout_marginTop="24dp"
                android:textColor="@color/black_220"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello!"
                android:fontFamily="@font/mulishmedium"/>
            <TextView
                android:layout_marginTop="6dp"
                android:textColor="@color/black_220"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What are you looking for ?"
                android:fontFamily="@font/mulishmedium"/>
            <EditText
                android:id="@+id/edt_searchHome"
                android:textColorHint="@color/gray_889"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cus_bgr_gray_circle_12"
                android:padding="12dp"
                android:textColor="@color/black"
                android:hint="Search keywords..."
                android:drawableStart="@drawable/baseline_search"
                android:drawablePadding="12dp"/>
            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/cus_bgr_green_circle_28"
                android:padding="12dp">
                <ImageView
                    android:layout_width="136dp"
                    android:layout_height="98dp"
                    android:src="@drawable/img_home_1"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/mulishmedium"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exclusive Offer\nGet 30% Off On fruit"/>
                    <Button
                        android:id="@+id/btn_gotoOrder"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:text="Order Now"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/mulishbold"
                        android:background="@drawable/cus_bgr_red_circle_12"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/black"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:fontFamily="@font/mulishblack"/>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcv_productHome"/>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>