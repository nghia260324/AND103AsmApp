<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingVertical="6dp">
    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cus_bgr_white_shadow"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/tv_rank"
            android:gravity="left"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mulishblack"/>
        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/tv_name"
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Apple"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mulishbold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_marginRight="6dp"
                android:id="@+id/btn_updateCategory"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/cus_bgr_white_shadow">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_mode_edit"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="6dp"
                android:id="@+id/btn_deleteCategory"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/cus_bgr_white_shadow">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:backgroundTint="@color/red_959"
                    android:background="@drawable/baseline_delete_forever"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>