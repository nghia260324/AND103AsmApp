<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="6dp">
    <LinearLayout
        android:background="@drawable/cus_bgr_white_circle_shadow"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginHorizontal="12dp"
            android:id="@+id/btn_hideProduct"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left">
            <TextView
                android:id="@+id/tv_name"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name | Phone"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/mulishmedium"/>
            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/tv_address"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:fontFamily="@font/mulishmedium"/>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_itemOrderTotal"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Order Total (2 Items)"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mulishbold"/>
                <TextView
                    android:id="@+id/tv_itemOrderTotalPrice"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200.000Ä‘"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mulishbold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:id="@+id/layout_itemProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>