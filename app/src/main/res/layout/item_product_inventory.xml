<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/cus_bgr_white_circle_shadow">
        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/apples_red"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left">
            <TextView
                android:lines="2"
                android:ellipsize="end"
                android:id="@+id/tv_name"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/mulishblack"/>
            <TextView
                android:id="@+id/tv_price"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100,000k"
                android:textSize="14sp"
                android:textColor="@color/green_200"
                android:fontFamily="@font/mulishmedium"/>
            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/tv_description"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distrubutor"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:fontFamily="@font/mulishmedium"/>
            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/tv_distributor"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distrubutor"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:fontFamily="@font/mulishmedium"/>
            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/tv_category"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:fontFamily="@font/mulishmedium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/btn_updateProduct"
                android:layout_marginBottom="6dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/cus_bgr_white_circle_shadow">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_mode_edit"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btn_deleteProduct"
                android:layout_marginTop="6dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/cus_bgr_white_circle_shadow">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:backgroundTint="@color/red_959"
                    android:background="@drawable/baseline_delete_forever"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>