<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/cus_bgr_white_shadow"
        android:gravity="center_vertical"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_home_1"
                android:scaleType="centerCrop"
                android:id="@+id/img_thumbnail"
                app:shapeAppearanceOverlay="@style/rounded_corner_12"/>
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apple"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mulishbold"
                    android:lines="2"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/tv_description"
                    android:gravity="left"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mulishbold"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100,000đ"
                    android:textSize="14sp"
                    android:textColor="@color/green_200"
                    android:fontFamily="@font/mulishbold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_itemOrderTotal"
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Order Total (2 Items)"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/mulishbold"/>
            <TextView
                android:id="@+id/tv_itemOrderTotalPrice"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200.000đ"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/mulishbold"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>